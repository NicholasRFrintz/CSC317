
<!doctype html>

<html lang="en">
<head>
	<title>The Blank Space - View a Post</title>
	<meta charset="utf-8">
	<link rel="stylesheet" type="text/css" href="../public/css/style.css">
	<script defer type="text/javascript" src="../public/js/viewpost.js"></script>
</head>
	
<body>
    <header>
      {{#if isLoggedIn}}
        <h2 id="usnplace">Hello, {{username}}</h2>
      {{/if}}
	<h2>The Blank Space</h2>
	<h3>We keep the space; You color it</h3>
    </header>
    <div id="navi">
    <nav id="nav_menu">
    	<ul>
            <li><a class="current" href="../index.html">Home</a></li>
            {{#if isLoggedIn}}
            <li><a href="#">Profile</a></li>
            <li><a id="logout">Log Out</a></li>
            {{else}}
            <li><a  href="../login.html">Log In</a></li>
            <li><a  href="../registration.html">Registration</a></li>
            {{/if}}
            <li><a  href="../postimage.html">Post an Image</a></li>
            <li class="adjust2"><form class="search-bar" action="/posts/search"
            enctype="application/x-www-form-urlencoded">
            <input id="searchTerm" class="searchTerm" name="searchTerm" type="text" value="{{searchValue}}"/>
            <button class="button" id="button2"type="sumbit">Search</button></form></li>
      </ul>
    </nav>
    </div id="navi">
    <section>
    {{log this}}
    <main>
        <h2 id="adjust">Requested Post: {{currentPost.id}}</h2>
        <h3>Post Title: {{currentPost.title}}</h3>
        <p>Post Author: {{currentPost.username}}</p>
        <p>Post Creation Time: {{formatDate currentPost.createdAt}}</p>
	  <p><img src="/{{currentPost.image}}" alt="" id="img"></p>
        <div class="comments">
          <div class="comment-box">
            <textarea id="comment-text" class="comment-box-text"></textarea><br>
            <button id="comment-button" data-postid="{{currentPost.id}}" class="button" value="sumbit">Comment</button>
          </div>
          {{#if isLoggedIn}}
            
          {{else}}
            <h3>Comments cannot be made. Please login to post.</h3>
          {{/if}}
          <div id="comment-space" class="comment-area">
            {{#each currentPost.comments}}
            <div id="message-{{this.commentId}}">
              <h2 class="comment-content3">Content: {{this.text}}</h2>
              <h3 class="comment-content1">By: {{this.username}}</h3>
              <h3 class="comment-content2">Created At: {{this.createdAt}}</h3>
            </div>
            {{/each}}
          </div>
        </div>
    </main>
    </section>
    <footer>
           <p>----------------------</p>
           <p>Created by NRF</p>
           <p>----------------------</p>
    </footer>
</body>
</html>